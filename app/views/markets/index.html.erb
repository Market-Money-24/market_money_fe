<h1>Markets</h1>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>City</th>
			<th>State</th>
			<th></th>
		</tr>
	</thead>
	<tbody class="market">
		<% @markets.each do |market| %>
			<tr>
				<td class="name"><%= market.name %></td>
				<td class="city"><%= market.city %></td>
				<td class="state"><%= market.state %></td>
				<td id=<%= "info-btn-#{market.id}" %>>
					<%= button_to "More Info", market_path(market.id), data: {turbo: false}, method: :get %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>